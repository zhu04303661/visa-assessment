# Python后端专用Dockerfile
FROM python:3.10-slim

# 设置工作目录
WORKDIR /app

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    && rm -rf /var/lib/apt/lists/*

# 复制Python依赖文件
COPY ace_gtv/requirements.txt ./

# 安装Python依赖
RUN pip install --no-cache-dir -r requirements.txt

# 复制后端源代码
COPY ace_gtv/ ./
COPY start_backend.sh ./

# 复制环境变量文件
COPY .env.local ./

# 创建必要的目录
RUN mkdir -p data personal_kb resumes

# 创建启动脚本
RUN echo '#!/bin/bash\n\
echo "🚀 启动后端服务 (ACE API + 简历处理)..."\n\
\n\
# 使用项目根目录的启动脚本\n\
bash /app/start_backend.sh\n\
' > /app/docker_start.sh && chmod +x /app/docker_start.sh

# 暴露端口
EXPOSE 5001 5002

# 设置环境变量
ENV PYTHONUNBUFFERED=1
ENV FLASK_ENV=production

# 健康检查
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:5001/health && curl -f http://localhost:5002/health || exit 1

# 启动服务
CMD ["/app/docker_start.sh"]
